<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/newInfo_img"
        app:layout_constraintLeft_toLeftOf="parent"/>
    <TextView

        app:layout_constraintTop_toBottomOf="@id/newInfo_img"
        app:layout_constraintLeft_toLeftOf="@id/newInfo_img"
        app:layout_constraintRight_toRightOf="@id/newInfo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newInfo_name"/>
    <TextView
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/newInfo_img"
        app:layout_constraintLeft_toLeftOf="@id/newInfo_img"
        app:layout_constraintRight_toRightOf="@id/newInfo_img"
        android:layout_toRightOf="@id/newInfo_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newInfo_price"
        android:textColor="#B10202"/>
</androidx.constraintlayout.widget.ConstraintLayout>