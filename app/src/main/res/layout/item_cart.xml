<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <CheckBox
        android:layout_marginLeft="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/item_cart_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_margin="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/item_cart_select"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/item_cart_img"
        android:background="@color/bg"/>
    <TextView
        android:id="@+id/item_cart_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="$$$"
        android:paddingBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@id/item_cart_img"
        android:layout_marginLeft="6dp"
        app:layout_constraintLeft_toRightOf="@id/item_cart_img"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_cart_ConstraintLayout"
        android:layout_marginLeft="6dp"
        android:layout_width="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/item_cart_img"
        app:layout_constraintTop_toTopOf="@id/item_cart_img"
        app:layout_constraintLeft_toRightOf="@id/item_cart_img">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:id="@+id/item_cart_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="商品名"/>
        <TextView
            android:id="@+id/item_cart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:text="x9"
            android:textSize="24sp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_cart_edit_ConstraintLayout"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/item_cart_img"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="@id/item_cart_img">
        <TextView
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="已选择：>"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>
        <LinearLayout
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp">
            <TextView
                android:id="@+id/item_cart_edit_subtrect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan"
                android:padding="10dp"
                android:textSize="18sp"
                android:text="-"/>
            <TextView
                android:id="@+id/item_cart_edit_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/yuan"
                android:textSize="18sp"
                android:padding="10dp"
                android:text="0"/>
            <TextView
                android:id="@+id/item_cart_edit_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:padding="10dp"
                android:background="@drawable/yuan"
                android:text="+"/>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>