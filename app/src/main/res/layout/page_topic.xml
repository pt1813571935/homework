<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
<ImageView
    android:scaleType="fitXY"
    android:layout_width="300dp"
    android:layout_height="180dp"
    android:id="@+id/page_t_img"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:padding="5dp"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/page_t_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page_tv_name"
        android:textSize="15sp"
        android:textColor="#525151"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/page_t_img"
        app:layout_constraintLeft_toRightOf="@id/page_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page_tv_price"
        android:textColor="#B10505"/>
    <TextView
        app:layout_constraintTop_toBottomOf="@id/page_tv_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/page_tv_title"
        android:maxEms="15"
        android:textColor="#BEBDBD"
        android:textSize="12sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>