<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#fff"
    android:padding="10dp"
    android:layout_height="match_parent">

    <ImageView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/pop_img"
        android:layout_width="100dp"
        android:background="@color/bg"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/pop_finishi"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="✖"
        android:textSize="26sp"/>
    <TextView
        android:id="@+id/pop_price"
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/pop_img"
        app:layout_constraintTop_toTopOf="@id/pop_img"
        app:layout_constraintBottom_toBottomOf="@id/pop_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="价格："/>
    <TextView
        android:layout_marginLeft="10dp"
        app:layout_constraintLeft_toRightOf="@id/pop_img"
        app:layout_constraintTop_toBottomOf="@+id/pop_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="已选择：请选择规格 数量"/>
    <TextView
        android:id="@+id/pop_zero"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="数量"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/pop_img"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="16sp"/>
    <TextView
        android:background="@drawable/yuan"
        android:id="@+id/pop_subtract"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="-"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pop_zero"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="28sp"/>
    <TextView
        android:background="@drawable/yuan"
        android:id="@+id/pop_num"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pop_zero"
        app:layout_constraintLeft_toRightOf="@id/pop_subtract"
        android:textSize="28sp"/>
    <TextView
        android:background="@drawable/yuan"
        android:id="@+id/pop_add"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="+"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/pop_zero"
        app:layout_constraintLeft_toRightOf="@id/pop_num"
        android:textSize="28sp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
