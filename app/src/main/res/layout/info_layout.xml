<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <ImageView
        android:id="@+id/brandinfo_img"
        android:layout_width="360dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="210dp"/>
    <TextView
        android:id="@+id/brandinfo_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/brandinfo_img"
        app:layout_constraintBottom_toBottomOf="@id/brandinfo_img"
        app:layout_constraintLeft_toLeftOf="@id/brandinfo_img"
        app:layout_constraintRight_toRightOf="@id/brandinfo_img"/>
</androidx.constraintlayout.widget.ConstraintLayout>